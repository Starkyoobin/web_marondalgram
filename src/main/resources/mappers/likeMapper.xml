<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.starkyb.marondalgram.post.like.dao.LikeDAO">
 	<insert id="insertLike" parameterType="map">
 		INSERT INTO `like`
 		(
 			`userId`
 			, `postId`
 			, `createdAt`
 		) VALUES (
 			#{userId}
 			, #{postId}
 			, now()
 		);
 	</insert>
 	
 	<select id="selectCountLikeByUserId" resultType="int" parameterType="map">
 		SELECT
 			count(*)
 		FROM
 			`like`
 		WHERE
 			`postId` = #{postId}
 		AND
 			`userId` = #{userId};
 	</select>
 	
 	<select id="selectCountLikeByPostId" parameterType="int" resultType="int">
 		SELECT
 			count(*)
 		FROM
 			`like`
 		WHERE
 			`postId` = #{postId};
 	</select>
 	
 	<delete id="deleteLikeCancel">
 		DELETE FROM `like`
 		WHERE
 			`userId` = #{userId}
 		AND
 			`postId` = #{postId};
 	</delete>
 	
 	<delete id="deleteLikeByPostId" parameterType="int">
 		DELETE
 		FROM
 			`like`
 		WHERE
 			`postId` = #{postId};
 	</delete>
</mapper>