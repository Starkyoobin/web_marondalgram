<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.starkyb.marondalgram.post.dao.PostDAO">
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		) VALUES (
			#{userId}
			, #{content}
			, #{imagePath}
			, now()
			, now()
		);
	</insert>
	
	<select id="selectPostList" resultType="com.starkyb.marondalgram.post.model.Post"
	parameterType="int">
		SELECT
			`id`
			, `userId`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
	</select>
</mapper>